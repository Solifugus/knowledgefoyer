# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/knowledge_foyer_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Server Configuration
NODE_ENV=development
PORT=3000
WS_PORT=3001
BASE_URL=http://localhost:3000

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
SESSION_SECRET=another-random-secret-for-sessions

# Email Configuration (use Ethereal Email for development)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your-test-email@ethereal.email
SMTP_PASS=your-test-password
EMAIL_FROM=noreply@knowledgefoyer.test
VERIFICATION_TOKEN_EXPIRY=24

# OpenAI Integration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_COMPLETION_MODEL=gpt-4
OPENAI_MAX_TOKENS=500
OPENAI_DAILY_BUDGET=5.00
OPENAI_SIMILARITY_THRESHOLD=0.85

# Security & CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
BCRYPT_SALT_ROUNDS=12

# Redis (optional for development, required for production scaling)
REDIS_URL=redis://localhost:6379

# Rate Limiting
LOGIN_RATE_LIMIT_PER_15MIN=5
EMAIL_RATE_LIMIT_PER_HOUR=3
FEEDBACK_RATE_LIMIT_PER_HOUR=10
MCP_RATE_LIMIT_PER_MINUTE=100

# WebSocket Configuration
MAX_WEBSOCKET_CONNECTIONS_PER_USER=3
WEBSOCKET_PING_INTERVAL=30000
WEBSOCKET_TIMEOUT=60000

# Development Settings
LOG_LEVEL=debug
ENABLE_CORS=true
ENABLE_HTTPS=false